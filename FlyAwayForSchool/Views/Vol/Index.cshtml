@model IEnumerable<FlyAwayForSchool.Vols>

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayName("Départ")
        </th>
        <th>
            @Html.DisplayName("Arrivée")
        </th>
        <th>
            @Html.DisplayName("Date Depart")
        </th>
        <th>
            @Html.DisplayName("Date Arrivée")
        </th>
        <th>
            @Html.DisplayName("Distance en m")
        </th>
        <th>
            @Html.DisplayName("Prix en €")
        </th>
        <th>
            @Html.DisplayName("Passagers")
        </th>
        <th>
            @Html.DisplayName("Heure Départ")
        </th>
        <th>
            @Html.DisplayName("Heure Arrivée")
        </th>
        <th>@Html.DisplayName("Actions")</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="info">
            <td>
                @Html.DisplayFor(modelItem => item.Depart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arrivee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDepart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateArrivee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passagers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeureDepart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeureArrivee)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
