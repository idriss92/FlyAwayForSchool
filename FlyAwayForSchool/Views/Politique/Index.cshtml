@model IEnumerable<FlyAwayForSchool.Politique>

@{
    ViewBag.Title = "Index";
    int b = 0;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>

        <th>
            @Html.DisplayName("Politique")
        </th>
        <th>
            @Html.DisplayName("Réduction appliquée en %")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (b % 2 == 0)
        {
            <tr class="info">
                <td>
                    @Html.DisplayFor(modelItem => item.NomPolitique)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TarificationPolitique)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdPolitique }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdPolitique }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdPolitique })
                </td>
            </tr>
        }
        else if(b%3==0)
        {
            <tr class="success">
                <td>
                    @Html.DisplayFor(modelItem => item.NomPolitique)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TarificationPolitique)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdPolitique }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdPolitique }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdPolitique })
                </td>
            </tr>
        }

        else
        {
            <tr class="danger">
                <td>
                    @Html.DisplayFor(modelItem => item.NomPolitique)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TarificationPolitique)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdPolitique }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdPolitique }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdPolitique })
                </td>
            </tr>
        }

        b++;
    }

</table>
